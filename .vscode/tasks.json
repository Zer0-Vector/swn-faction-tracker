{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "label": "npm: build",
      "detail": "tsc && vite build"
    },
    {
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": [{
          "kind": "file",
          "regexp": "^$",
          "file": 1,
          "message": 1
          }],
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Vite v",
          "endsPattern": "Local:|Network:"
        }
      },
      "label": "npm: dev",
      "detail": "vite start dev server",
      "group": "none",
      "runOptions": {
        "instanceLimit": 1
      },

    }
  ]
}
